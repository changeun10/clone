<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javalec.worldCup.dao.ICategoryDao">
	<select id="listByDate" resultType="com.javalec.worldCup.dto.CategoryDto">
		select * from category order by regDate desc
	</select>
	<select id="listByHit" resultType="com.javalec.worldCup.dto.CategoryDto">
		select * from category order by hit desc
	</select>
	<update id="hit">
		update category set hit=hit+1 where title=#{title}
	</update>
	
</mapper>