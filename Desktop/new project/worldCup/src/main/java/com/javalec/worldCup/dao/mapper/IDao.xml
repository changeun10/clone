<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javalec.worldCup.dao.IDao">
   <select id="list" resultType="com.javalec.worldCup.dto.Dto">
   	select * from ${value} order by win desc
   </select>
   <update id="update">
   	update ${param1} set win=win+1 where id=#{param2}
   </update>
   
   <insert id="test" parameterType="java.util.List">
   	insert all 
   	<foreach item="item" index="index" collection="list">
   		into insert_test values (#{item})
   	</foreach>
   	select * from dual
   	
   </insert>
   
   <insert id="test2" parameterType="java.util.List">
   	insert all 
   	<foreach item="item" index="index" collection="list">
   		into insert_test values (#{item.id},#{item.name})
   	</foreach>
   	select * from dual
   	
   </insert>
   
</mapper>
